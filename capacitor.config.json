{
  "appId": "com.nephtrack.app",
  "appName": "Output Tracker",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "iosScheme": "capacitor",
    "hostname": "localhost"
  },
  "plugins": {
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#0d0d14"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0d0d14",
      "showSpinner": false
    }
  },
  "ios": {
    "contentInset": "always",
    "allowsLinkPreview": false,
    "scrollEnabled": true
  }
}